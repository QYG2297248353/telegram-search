{
  "name": "telegram-search",
  "type": "module",
  "version": "1.1.8",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "start": "concurrently \"pnpm run server:dev\" \"pnpm run web:preview --host 0.0.0.0\"",
    "server:dev": "pnpm -F @tg-search/server dev",
    "web:dev": "pnpm -F @tg-search/web dev",
    "web:build": "pnpm -F @tg-search/web build",
    "web:preview": "pnpm -F @tg-search/web preview",
    "dev": "VITE_WITH_CORE=true pnpm -F @tg-search/web dev",
    "build": "VITE_WITH_CORE=true pnpm -F @tg-search/web build",
    "preview": "pnpm run build && pnpm -F @tg-search/web preview",
    "build:packages": "pnpm -rF=\"./packages/*\" --parallel build",
    "dev:server": "pnpm run server:dev",
    "dev:frontend": "pnpm run web:dev",
    "packages:build": "pnpm run build:packages",
    "test": "vitest",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "typecheck": "tsc --noEmit && pnpm -r --parallel typecheck",
    "bump": "bumpp",
    "bump:deps": "taze -I -f -w -r",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/db.ts migrate",
    "db:push": "tsx scripts/db.ts push",
    "db:kit": "tsx scripts/db.ts",
    "postinstall": "pnpm run packages:build"
  },
  "devDependencies": {
    "@proj-airi/unocss-preset-chromatic": "^1.0.0",
    "@types/node": "^24.5.0",
    "@unbird/eslint-config": "catalog:",
    "@unbird/logg": "catalog:",
    "bumpp": "^10.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "tailwind-merge": "^3.3.1",
    "taze": "^19.6.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "unocss": "^66.5.1",
    "unocss-preset-animations": "^1.2.1",
    "unocss-preset-shadcn": "^1.0.1",
    "unplugin-unused": "^0.5.3",
    "vite": "npm:rolldown-vite@7.1.5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "rollup": "4.43.0"
    }
  }
}
